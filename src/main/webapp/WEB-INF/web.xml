<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
  
    <servlet>
        <servlet-name>servletEsempio</servlet-name>
        <servlet-class>com.mycompany.we_2020.servletEsempio</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletEsempio</servlet-name>
        <url-pattern>/servletEsempio</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    
    <!-- UTILIZZATI PER IL JDBC DIRETTO (usato solo nella servletEsempio--> 
    <context-param>
        <param-name>data.jdbc.driver</param-name>
        <!-- attenzione: questo esempio usa il connector/J 8: il nome del driver Ã¨ diverso per evitare conflitti col driver della versione precedente -->
        >
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>data.jdbc.connectionstring</param-name>
        
    <!-- Il connector/J8 necessita della timezone del server specificata -->
 
        <param-value>jdbc:mysql://localhost/we_database_2020?serverTimezone=UTC</param-value>
    </context-param>
    <context-param>
        <param-name>data.jdbc.username</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>data.jdbc.password</param-name>
        <param-value>Rorschach69</param-value>
    </context-param>
    
    
<!-- riferimento per il pooling, deve essere associato alla Risorsa database nel 'context.xml' -->
    <resource-ref>
        <description>Your Description</description>
        <res-ref-name>jdbc/we_database_2020</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
</web-app>
